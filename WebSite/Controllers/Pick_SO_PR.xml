    <command id="command1" type="Text" tableName="dbo.SO_Line_Items" custom="true">
      <text><![CDATA[SELECT     dbo.SO_Line_Items.SO_NO, dbo.SO_Line_Items.SO_Line_No, dbo.SO_Line_Items.Item_Code, dbo.SO_Line_Items.SO_Qty, dbo.SO_Line_Items.Unit_Price, 
                      dbo.SO_Line_Items.Line_Remarks, dbo.SO_Line_Items.Pick, dbo.SO_Line_Items.Pick_Qty, dbo.SO_Line_Items.Line_Total, dbo.SO_Line_Items.QT_NO, 
                      dbo.SO_Line_Items.Pick_Doc, dbo.SO_Line_Items.DeliveryDate, dbo.SO_Line_Items.Line_Net, dbo.SO_Line_Items.DV_Balance, dbo.SO_Line_Items.PR_Balance, 
                      dbo.PR_Header.PR_NO, dbo.SO_Line_Items.Source_LineID, dbo.SO_Line_Items.Item_Desc, dbo.SO_Line_Items.Item_Part, dbo.SO_Line_Items.UOM, 
                      dbo.SO_Line_Items.Project_Code, dbo.SO_Line_Items.Dept_Code, ISNULL(dbo.SO_Line_Items.BO_PR, 0) AS Expr1, dbo.SO_Line_Items.YourRefrence, 
                      dbo.SO_Line_Items.SO_OPU_Code,dbo.SO_Line_Items.Updated_By,dbo.SO_Line_Items.Updated_DateTime,dbo.SO_Line_Items.P_Doc_No , dbo.SO_Line_Items.Pick_UOM
FROM         dbo.PR_Header CROSS JOIN
                      dbo.SO_Line_Items
WHERE     (ISNULL(dbo.SO_Line_Items.CloseYN, 0) = 0) AND (dbo.SO_Line_Items.DV_Balance > 0) AND (dbo.SO_Line_Items.PR_Balance > 0) AND 
                      (ISNULL(dbo.SO_Line_Items.BO_PR, 0) = 1)]]></text>
    </command>

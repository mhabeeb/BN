      <action commandName="SQL" headerText="^Reject^Reject^Reject^" cssClass="glyphicon glyphicon-remove" whenClientScript="[ActionTakenYN] != 1&#xD;&#xA;[OwnerUser] != [Mail_To]" id="a101" whenLastCommandName="Select" confirmation="_controller=ApprovalRemarks_Reject&#xD;&#xA;_title=Enter Rejection Reason&#xD;&#xA;_width=500">

  <commands>
    <command id="command1" type="Text" tableName="dbo.APAR_Payments" custom="true">
      <text><![CDATA[SELECT PaymentID,
       Sys_Number,
       Vendor_Name,
       Payment_Date,
       Currency_Code,
       Amount_Paid,
       Cur_Rate,
       Amount_Paid_BC,
       Project_Code,
       Dept_Code,
       OPU_Code,
       CashBankID,
       CheckNo,
       PaymentType,
       PayNumber,
       PMT_APPLY_BAL,
       RefreshPMT,
       Company_Code,
       Transaction_ID,
       Emp_id,

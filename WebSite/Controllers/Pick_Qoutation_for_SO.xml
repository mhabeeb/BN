      <text><![CDATA[SELECT  dbo.tbl_Quotation_Line.QT_NO, dbo.tbl_Quotation_Line.Item_Code, dbo.tbl_Quotation_Line.QT_Qty, dbo.tbl_Quotation_Line.Line_Remarks, dbo.tbl_Quotation_Line.Unit_Price, dbo.tbl_Quotation_Line.Pick_Qty, dbo.tbl_Quotation_Line.Pick_Doc, 
                   dbo.tbl_Quotation_Line.Pick, dbo.tbl_Quotation_Line.Line_Total, dbo.tbl_Quotation_Line.DeliveryDate, dbo.tbl_Quotation_Line.Line_Net, dbo.tbl_Quotation_Line.Sys_Number, dbo.tbl_Quotation_Line.QT_Balance, dbo.tbl_Quotation_Line.Item_Desc, 
                   dbo.tbl_Quotation_Line.Item_Part, dbo.tbl_Quotation_Line.UOM, dbo.SO_Header.SO_NO, dbo.tbl_Quotation_Line.LineID, dbo.tbl_Quotation_Line.QT_OPU_Code, dbo.tbl_Quotation_Line.Updated_By, dbo.tbl_Quotation_Line.Updated_DateTime, 
                   dbo.tbl_Quotation_Line.Item_Code_Ref_No, dbo.SO_Header.Rec_Status, dbo.tbl_Quotation_Line.QT_Base_Qty, dbo.tbl_Quotation_Line.QT_Base_UOM, dbo.tbl_Quotation_Line.P_Doc_No, dbo.SO_Header.LocationID, 
                   dbo.SO_Header.Location_Name
FROM      dbo.SO_Header INNER JOIN
                   dbo.tbl_Quotation_Line ON dbo.SO_Header.Sys_Number = dbo.tbl_Quotation_Line.Sys_Number AND dbo.SO_Header.LocationID = dbo.tbl_Quotation_Line.LocationID
WHERE   (dbo.tbl_Quotation_Line.QT_Balance > 0)]]></text>

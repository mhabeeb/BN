    <rule type="Sql" id="getData" commandName="Select" phase="Before"><![CDATA[SELECT *
FROM
(
    SELECT 'Actual' AS TrxType,
           OPU_Code_Ln AS OPU_Code,
           Account_Type,
           AccountID,
           Ac_Description AS Account_Description,
           Project_Code,
           Dept_Code,
           [TrxYear],
           DATENAME(month, DATEADD(month, TrxMonths, 0) - 1) AS [MONTH],
           abs(ISNULL(Debit_Amount - Credit_Amount, 0)) * -1 AS Amount
    FROM dbo.GL_Transaction_Line
  --  WHERE Account_Type IN('Expense', 'Revenue', 'Cogs')
) AS s PIVOT(SUM(Amount) FOR [MONTH] IN([January],
                                        [February],
                                        [March],
                                        [April],
                                        [May],
                                        [June],
                                        [July],
                                        [August],
                                        [September],
                                        [October],
                                        [November],
                                        [December])) AS p
UNION
SELECT *
FROM
(
    SELECT 'Budget' AS TrxType,
           OPU_Code,
           Account_Type,
           AccountID,
           Account_Description,
           Project_Code,
           Dept_Code,
           [BudgetYear] AS TrxYear,
           DATENAME(month, DATEADD(month, BudgetMonth, 0) - 1) AS [MONTH],
           ISNULL(BudgetAmount, 0) Amount
    FROM dbo.GL_Budgeting
--  WHERE Account_Type IN('Expense', 'Revenue', 'Cogs')
--WHERE BudgetCode IN (SELECT BudgetCode FROM GL_Budget_Master WHERE IsNull(InActive,0)=0)
) AS s PIVOT(SUM(Amount) FOR [MONTH] IN([January],
                                        [February],
                                        [March],
                                        [April],
                                        [May],
                                        [June],
                                        [July],
                                        [August],
                                        [September],
                                        [October],
                                        [November],
                                        [December])) AS p;]]></rule>

      <action commandName="SQL" id="a100" headerText="Include All ">
        <data><![CDATA[DELETE FROM [UserProjectAccess] WHERE [UserID]=@UserID 
INSERT INTO [UserProjectAccess]
           ([UserID]
           ,[Project_Code]
           ,[Created_By]
           ,[Created_DateTime])

SELECT @UserID ,Project_Code, @BusinessRules_UserId,getdate() 
FROM dbo.tbl_Projects WHERE IsNull(Is_Active,1)=1 and Project_Code not in ('None')
AND OPU_Code=@Session_OPU_Code]]></data>
      </action>
      <action commandName="SQL" headerText="Remove All" id="a101">
        <data><![CDATA[DELETE FROM [UserProjectAccess] WHERE [UserID]=@UserID AND OPU_Code=@Session_OPU_Code
]]></data>
      </action>
      <action commandName="SQL" headerText="Exclude All Except Employee Assignment" id="a102">
        <data><![CDATA[DELETE FROM [UserProjectAccess] WHERE [UserID]=@UserID
INSERT INTO [UserProjectAccess]
           ([UserID]
           ,[Project_Code]
           ,[Created_By]
           ,[Created_DateTime])
SELECT @UserID,
       Project_Code,
       @BusinessRules_UserId,
       GETDATE()
FROM dbo.tbl_Projects
WHERE ISNULL(Is_Active, 1) = 1
      AND Project_Code NOT IN
(
    SELECT dbo.Employees.Project_Code
    FROM dbo.Employees
    WHERE dbo.Employees.UserID = @UserID
)]]></data>
      </action>

    <field name="Report_To" type="Int32" label="^RepTo^Report To^RepTo^" />
    <field name="UserType" type="String" label="^UseTyp^User Type^UseTyp^" length="50" />
    <field name="PasswordC" type="String" label="^PasC^Password C^PasC^" length="128" />
    <field name="PasswordS" type="String" label="^PasS^Password S^PasS^" length="128" />

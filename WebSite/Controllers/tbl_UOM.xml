<?xml version="1.0" encoding="utf-8"?>
<dataController name="tbl_UOM" conflictDetection="overwriteChanges" label="tbl_UOM" plugIn="MyCompany.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text" tableName="tbl_UOM" custom="true">
      <text><![CDATA[SELECT * FROM tbl_UOM]]></text>
    </command>
  </commands>
  <fields>
    <field name="Unit_Of_Measure" type="String" allowNulls="false" label="^UnitOfMeasure^Unit Of Measure^UnitOfMeasure^" length="10" isPrimaryKey="true" />
    <field name="UOM_Desc" type="String" allowNulls="false" label="^UOMDescription^UOM Description^UOMDescription^" allowQBE="false" allowSorting="false" htmlEncode="false" hidden="false" />
    <field name="Created_By" type="Decimal" label="^CreatedBy^Created By^CreatedBy^" showInSummary="true">
      <items style="DropDownList" dataController="Pick_Users" dataView="grid1" dataTextField="UserName" dataValueField="UserID" />
    </field>
    <field name="Created_DateTime" type="DateTime" label="^CreatedDateTime^Created Date Time^CreatedDateTime^" showInSummary="true" />
    <field name="Updated_By" type="Decimal" label="^UpdatedBy^Updated By^UpdatedBy^" showInSummary="true">
      <items style="DropDownList" dataController="Pick_Users" dataView="grid1" dataTextField="UserName" dataValueField="UserID" />
    </field>
    <field name="Updated_DateTime" type="DateTime" label="^UpdatedDateTime^Updated Date Time^UpdatedDateTime^" showInSummary="true" />
    <field name="InActive" type="Boolean" label="^InActive^In Active^InActive^" allowNulls="false">
      <items style="RadioButtonList" dataController="YesNo" dataView="grid1" dataTextField="Descriptions" dataValueField="ReturnValueInt" />
    </field>
    <field name="AddressAr" type="String" readOnly="true" label="Address Ar" computed="true">
      <formula>SELECT @Session_Address_Arabic</formula>
    </field>
    <field name="AddressEn" type="String" readOnly="true" label="Address En" computed="true">
      <formula>SELECT @Session_Address_English</formula>
    </field>
    <field name="ABranchLogo" type="Byte[]" label="ABranch Logo" onDemand="true" onDemandHandler="tbl_BranchLogoOPULogo" onDemandStyle="Thumbnail" readOnly="true" allowQBE="false" sourceFields="ABranch_Code" />
    <field name="ABranch_Code" type="Int32" label="ABranch Code" computed="true">
      <formula>SELECT @Session_OPU_Code</formula>
    </field>
    <field name="ABranch" type="String" allowNulls="false" label="Branch Name" allowQBE="false" allowSorting="false" htmlEncode="false" hidden="false" length="100" readOnly="true" computed="true" showInSummary="true">
      <formula>SELECT @Session_BranchName </formula>
    </field>
    <field name="ACompanyName" type="String" allowNulls="false" label="Company Name" allowQBE="false" allowSorting="false" computed="true" htmlEncode="false" hidden="false" length="100" readOnly="true" showInSummary="true">
      <formula>SELECT @Session_CompanyName</formula>
    </field>
    <field name="ABranchAR" type="String" label="ABranch AR" computed="true" readOnly="true">
      <formula>SELECT @Session_BranchName_Ar</formula>
    </field>
    <field name="AStoreName" type="String" allowNulls="false" readOnly="true" label="^StoreName^Store Name^StoreName^" allowQBE="false" allowSorting="false" computed="true" showInSummary="true" htmlEncode="false" hidden="false" length="100">
      <formula>SELECT  @Session_StoreName</formula>
    </field>
  </fields>
  <views>
    <view id="grid1" type="Grid" commandId="command1" label="Unit of Measure" reportTemplate="true" reportOrientation="Landscape" showInSelector="false">
      <headerText />
      <dataFields>
        <dataField fieldName="AStoreName" rows="5" hidden="true" />
        <dataField fieldName="UOM_Desc" rows="5" />
        <dataField fieldName="ABranch" rows="5" hidden="true" />
        <dataField fieldName="ACompanyName" rows="5" hidden="true" />
        <dataField fieldName="Unit_Of_Measure" columns="10" />
        <dataField fieldName="Created_By" hidden="true" columns="15" />
        <dataField fieldName="Created_DateTime" hidden="true" dataFormatString="t" columns="10" />
        <dataField fieldName="Updated_By" hidden="true" columns="15" />
        <dataField fieldName="Updated_DateTime" hidden="true" dataFormatString="t" columns="10" />
        <dataField fieldName="InActive" columns="15" />
        <dataField fieldName="AddressAr" rows="5" hidden="true" />
        <dataField fieldName="AddressEn" rows="5" hidden="true" />
        <dataField fieldName="ABranchAR" rows="5" hidden="true" />
      </dataFields>
    </view>
    <view id="editForm1" type="Form" commandId="command1" label="Review Unit of Measure" showInSelector="false">
      <headerText />
      <categories>
        <category id="c1" headerText="^EdiUniOfMea^Edit Unit of Measure^EdiUniOfMea^" flow="NewColumn">
          <description />
          <dataFields>
            <dataField fieldName="Unit_Of_Measure" columns="20" />
            <dataField fieldName="UOM_Desc" rows="2" columns="20" />
            <dataField fieldName="Created_By" hidden="true" columns="15" />
            <dataField fieldName="Created_DateTime" hidden="true" dataFormatString="t" columns="10" />
            <dataField fieldName="Updated_By" hidden="true" columns="15" />
            <dataField fieldName="InActive" columns="15" />
            <dataField fieldName="Updated_DateTime" hidden="true" dataFormatString="t" columns="10" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="createForm1" type="Form" commandId="command1" label="New UOM" showInSelector="false">
      <headerText />
      <categories>
        <category id="c1" headerText="^NewUom^New UOM^NewUom^" flow="NewColumn">
          <description />
          <dataFields>
            <dataField fieldName="Unit_Of_Measure" columns="20" />
            <dataField fieldName="UOM_Desc" rows="2" columns="20" />
            <dataField fieldName="Created_By" hidden="true" columns="15" />
            <dataField fieldName="Created_DateTime" hidden="true" dataFormatString="t" columns="10" />
            <dataField fieldName="Updated_By" hidden="true" columns="15" />
            <dataField fieldName="Updated_DateTime" hidden="true" dataFormatString="t" columns="10" />
            <dataField fieldName="InActive" columns="15" hidden="true" />
          </dataFields>
        </category>
      </categories>
    </view>
    <view id="About" commandId="command1" type="Form" label="Record History" showInSelector="false">
      <categories>
        <category id="c1" headerText="^IteCat^Item Category^IteCat^" flow="NewColumn">
          <dataFields>
            <dataField fieldName="Created_DateTime" dataFormatString="t" columns="10" />
            <dataField fieldName="Updated_DateTime" dataFormatString="t" columns="10" />
            <dataField fieldName="Updated_By" columns="15" />
            <dataField fieldName="Created_By" columns="15" />
          </dataFields>
        </category>
      </categories>
    </view>
  </views>
  <actions>
    <actionGroup id="ag1" scope="Grid">
      <action id="a1" commandName="Select" commandArgument="editForm1" />
    </actionGroup>
    <actionGroup id="ag2" scope="Form">
      <action id="a1" commandName="Edit" />
      <action id="a3" commandName="Cancel" />
      <action id="a4" whenLastCommandName="Edit" commandName="Update" />
      <action id="a6" whenLastCommandName="Edit" commandName="Cancel" />
      <action id="a7" whenLastCommandName="New" commandName="Insert" />
      <action id="a8" whenLastCommandName="New" commandName="Cancel" />
      <action id="a9" whenLastCommandName="Duplicate" commandName="Insert" />
      <action id="a10" whenLastCommandName="Duplicate" commandName="Cancel" />
      <action id="a13" whenLastCommandName="Insert" whenView="createForm1" commandName="Select" commandArgument="editForm1" whenKeySelected="true" whenClientScript="this.get_hasDetails()" />
    </actionGroup>
    <actionGroup id="ag3" scope="ActionBar" headerText="New" flat="true">
      <action id="a1" commandName="New" commandArgument="createForm1" cssClass="glyphicon glyphicon-list-alt" headerText="^NewUOM^New UOM^NewUOM^" />
    </actionGroup>
    <actionGroup id="ag4" scope="ActionBar" headerText="Edit/Delete" flat="true">
      <action id="a1" whenKeySelected="true" commandName="Edit" commandArgument="editForm1" cssClass="glyphicon glyphicon-edit" whenView="grid1" />
    </actionGroup>
    <actionGroup id="ag5" scope="ActionBar" headerText="Actions">
      <action id="a1" commandName="ExportCsv" />
      <action id="a2" />
      <action id="a3" commandName="ExportRowset" />
      <action id="a4" commandName="ExportRss" />
    </actionGroup>
    <actionGroup id="ag6" scope="ActionBar" headerText="Record">
      <action id="a1" whenLastCommandName="Edit" commandName="Update" />
      <action id="a2" whenLastCommandName="Edit" commandName="Cancel" />
      <action id="a3" whenLastCommandName="New" commandName="Insert" />
      <action id="a4" whenLastCommandName="New" commandName="Cancel" />
    </actionGroup>
    <actionGroup id="ag7" scope="ActionBar" headerText="Report">
      <action id="a1" commandName="ReportAsPdf" />
      <action id="a2" commandName="ReportAsImage" />
      <action id="a3" commandName="ReportAsExcel" />
      <action id="a4" commandName="ReportAsWord" />
    </actionGroup>
    <actionGroup id="ag8" scope="Row">
      <action id="a4" whenLastCommandName="Edit" commandName="Update" />
      <action id="a5" whenLastCommandName="Edit" commandName="Cancel" />
      <action id="a6" whenLastCommandName="New" commandName="Insert" />
      <action id="a7" whenLastCommandName="New" commandName="Cancel" />
    </actionGroup>
    <actionGroup id="ag102" scope="ActionBar" headerText="^AboutRecord^About Record^AboutRecord^" flat="true">
      <action commandName="EditModal" commandArgument="About" headerText="^AboutRecord^About Record^AboutRecord^" id="a100" cssClass="glyphicon-eye-open" />
    </actionGroup>
  </actions>
  <businessRules>
    <rule id="r100" commandName="Insert|Update|Delete" type="Sql" phase="Before"><![CDATA[IF dbo.CHECK_VALID_OPU_STORE(@BusinessRules_UserId, @Session_OPU_Code, @Session_StoreID) = 0
    BEGIN
        SET @BusinessRules_PreventDefault = 1
        SET @Result_Focus = 'UOM_Desc,Invalid Store/Branch Selection Please select valid Organization from Change Organization Page.'
END
if IsNull(@Session_IsReadOnly,0)=1
begin
    SET @BusinessRules_PreventDefault = 1
    SET @Result_ShowViewMessage='Sorry!, You Are ReadOnly User ....You Cannot Change Record'
end
]]></rule>
    <rule id="r101" commandName="Update|Delete" type="Sql" phase="Before"><![CDATA[if IsNull(@Session_IsWriteOnly,0)=1
begin
    SET @BusinessRules_PreventDefault = 1
    SET @Result_ShowViewMessage='Sorry!, You Are WriteOnly User ....You Cannot Change Record'
end]]></rule>
  </businessRules>
</dataController>
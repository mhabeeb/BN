    <rule type="Sql" id="getData" commandName="Select" phase="Before"><![CDATA[IF @Session_LedDate IS NULL
   SET @Session_LedDate = GETDATE();
SELECT A.[AccountID],
       A.[Account_Description],
       A.[Account_Type],
       A.[Ref_Account_No],
       A.[PostableYN],
       B.OPU_Code OPU_Code,
       c.rdate CalcDate,
       B.Project_Code Project_Code,
       B.Dept_Code Dept_Code,
       B.SiteCode SiteCode,
	  co.D1Caption,
	  co.D2Caption,
	  co.D3Caption,
	  co.D4Caption,
       B.S1 S1,
       B.S2 S2,
       B.S3 S3,
       B.S4 S4,
       CASE A.[PostableYN]
           WHEN 0
           THEN '<font Color=BLUE ,size='+CAST(4 - A.Ac_Level AS VARCHAR(2))+'>'+REPLICATE('&nbsp;', A.Ac_Level*2)+A.AccountID+'-'+A.Account_Description+'</Font>'
           ELSE REPLICATE('&nbsp;', A.Ac_Level*2)+A.AccountID+'-'+A.Account_Description
       END AS Account_Desc_Html,
       (CAST(
            (
                SELECT CAST(SUM(O.Debit_Amount - O.Credit_Amount) AS MONEY)
                FROM GL_Balances O
                WHERE 1 = (CASE
                               WHEN(O.Account_Type NOT IN('Expense', 'Revenue', 'Cogs')
                      AND O.CalcDate < c.rdate)
                               THEN 1
                               WHEN(O.Account_Type IN('Expense', 'Revenue', 'Cogs')
                AND O.CalcDate < c.rdate
                AND O.CalcDate BETWEEN c.FromEPFormat AND c.ToEPFormat)
                               THEN 1
                               ELSE 0
                           END)
                AND O.Lineage LIKE '%/'+A.[AccountID]+'/%'
                AND ISNULL(O.OPU_Code, 0) = B.OPU_Code
                AND 1 = (CASE
                             WHEN B.Project_Code = 'None'
                             THEN 1
                             WHEN O.Project_Code = B.Project_Code
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.SiteCode = 'None'
                             THEN 1
                             WHEN O.SiteCode = B.SiteCode
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.Dept_Code = 'None'
                             THEN 1
                             WHEN O.Dept_Code = B.Dept_Code
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.S1 = 'None'
                             THEN 1
                             WHEN O.S1 = B.S1
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.S2 = 'None'
                             THEN 1
                             WHEN O.S2 = B.S2
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.S3 = 'None'
                             THEN 1
                             WHEN O.S3 = B.S3
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.S4 = 'None'
                             THEN 1
                             WHEN O.S4 = B.S4
                             THEN 1
                             ELSE 0
                         END) FOR XML PATH('')
            ) AS MONEY)) OpeningBalance,
       (CAST(
            (
                SELECT SUM(O.Debit_Amount)
                FROM GL_Balances O
                WHERE O.CalcDate = c.rdate
                      AND O.Lineage LIKE '%/'+A.[AccountID]+'/%'
                      AND ISNULL(O.OPU_Code, 0) = B.OPU_Code
                      AND 1 = (CASE
                                   WHEN B.Project_Code = 'None'
                                   THEN 1
                                   WHEN O.Project_Code = B.Project_Code
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.SiteCode = 'None'
                                   THEN 1
                                   WHEN O.SiteCode = B.SiteCode
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.Dept_Code = 'None'
                                   THEN 1
                                   WHEN O.Dept_Code = B.Dept_Code
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.S1 = 'None'
                                   THEN 1
                                   WHEN O.S1 = B.S1
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.S2 = 'None'
                                   THEN 1
                                   WHEN O.S2 = B.S2
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.S3 = 'None'
                                   THEN 1
                                   WHEN O.S3 = B.S3
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.S4 = 'None'
                                   THEN 1
                                   WHEN O.S4 = B.S4
                                   THEN 1
                                   ELSE 0
                               END) FOR XML PATH('')
            ) AS MONEY)) Period_Debit,
       (CAST(
            (
                SELECT CAST(SUM(O.Credit_Amount) AS MONEY)
                FROM GL_Balances O
                WHERE O.CalcDate = c.rdate
                      AND O.Lineage LIKE '%/'+A.[AccountID]+'/%'
                      AND ISNULL(O.OPU_Code, 0) = B.OPU_Code
                      AND 1 = (CASE
                                   WHEN B.Project_Code = 'None'
                                   THEN 1
                                   WHEN O.Project_Code = B.Project_Code
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.SiteCode = 'None'
                                   THEN 1
                                   WHEN O.SiteCode = B.SiteCode
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.Dept_Code = 'None'
                                   THEN 1
                                   WHEN O.Dept_Code = B.Dept_Code
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.S1 = 'None'
                                   THEN 1
                                   WHEN O.S1 = B.S1
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.S2 = 'None'
                                   THEN 1
                                   WHEN O.S2 = B.S2
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.S3 = 'None'
                                   THEN 1
                                   WHEN O.S3 = B.S3
                                   THEN 1
                                   ELSE 0
                               END)
                      AND 1 = (CASE
                                   WHEN B.S4 = 'None'
                                   THEN 1
                                   WHEN O.S4 = B.S4
                                   THEN 1
                                   ELSE 0
                               END) FOR XML PATH('')
            ) AS MONEY)) Period_Credit,
       (CAST(
            (
                SELECT SUM(O.Debit_Amount - O.Credit_Amount)
                FROM GL_Balances O
                WHERE 1 = (CASE
                               WHEN(O.Account_Type NOT IN('Expense', 'Revenue', 'Cogs')
                      AND O.CalcDate <= c.rdate)
                               THEN 1
                               WHEN(O.Account_Type IN('Expense', 'Revenue', 'Cogs')
                AND O.CalcDate <= c.rdate
                AND O.CalcDate BETWEEN c.FromEPFormat AND c.ToEPFormat)
                               THEN 1
                               ELSE 0
                           END)
                AND O.Lineage LIKE '%/'+A.[AccountID]+'/%'
                AND ISNULL(O.OPU_Code, 0) = B.OPU_Code
                AND 1 = (CASE
                             WHEN B.Project_Code = 'None'
                             THEN 1
                             WHEN O.Project_Code = B.Project_Code
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.SiteCode = 'None'
                             THEN 1
                             WHEN O.SiteCode = B.SiteCode
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.Dept_Code = 'None'
                             THEN 1
                             WHEN O.Dept_Code = B.Dept_Code
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.S1 = 'None'
                             THEN 1
                             WHEN O.S1 = B.S1
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.S2 = 'None'
                             THEN 1
                             WHEN O.S2 = B.S2
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.S3 = 'None'
                             THEN 1
                             WHEN O.S3 = B.S3
                             THEN 1
                             ELSE 0
                         END)
                AND 1 = (CASE
                             WHEN B.S4 = 'None'
                             THEN 1
                             WHEN O.S4 = B.S4
                             THEN 1
                             ELSE 0
                         END) FOR XML PATH('')
            ) AS MONEY)) Closing_Amount
FROM [dbo].[COA_Natural_Account] A,
     [dbo].[Users] B,
[dbo].[Accounting_Dimensions] co,
     [dbo].[GET_CALNDAR_NUM_YYYYMM_BY_DATE_V1](@Session_LedDate,@Session_CalenderID) c
WHERE UserID = @BusinessRules_UserId and B.Company_Code=co.Company_Code AND B.Company_Code=A.Company_Code]]></rule>

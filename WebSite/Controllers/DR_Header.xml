<?xml version="1.0" encoding="utf-8"?>
<dataController name="DR_Header" conflictDetection="overwriteChanges" label="^DepHea^DR_Header^DepHea^" plugIn="MyCompany.Data.AnnotationPlugIn" xmlns="urn:schemas-codeontime-com:data-aquarium">
  <commands>
    <command id="command1" type="Text" tableName="DR_Header" custom="true">
      <text><![CDATA[SELECT        DR_No, DR_ID, DR_Type, DR_Date, OPU_Code, Company_Code, Remarks, ReleaseDR, Created_By, Created_DateTime, Updated_By, Updated_DateTime, StoreID, Approve_Ask, Rec_Status, DOC_TYPE_ID, 
                         App_Group_ID
FROM            dbo.DR_Header
WHERE        (DR_Type = N'Sales')]]></text>

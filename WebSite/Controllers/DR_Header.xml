    <field name="OPU_Code" type="Int32" label="^OPUCod^OPU Code^OPUCod^" showInSummary="true" />
    <field name="Company_Code" type="Int32" label="^ComCod^Company Code^ComCod^" showInSummary="true" />
    <field name="Remarks" type="String" label="^Rem^Remarks^Rem^" length="50" />
    <field name="ReleaseDR" type="Boolean" label="^RelDR^Release DR^RelDR^" allowNulls="false">
      <items style="CheckBox" />
    </field>
    <field name="Created_By" type="Decimal" label="^CreBy^Created By^CreBy^">
      <items style="DropDownList" dataController="Pick_Users" dataView="grid1" dataTextField="UserName" dataValueField="UserID" />
    </field>
    <field name="Created_DateTime" type="DateTime" label="^CreDatTim^Created Date Time^CreDatTim^" />
    <field name="Updated_By" type="Decimal" label="^UpdBy^Updated By^UpdBy^">

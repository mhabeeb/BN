    <field name="Updated_DateTime" type="DateTime" label="^UpdDatTime^Updated Date Time^UpdDatTme^" />
    <field name="StoreID" type="Int32" label="^StoId^Store#^StoId^" />
    <field name="DOC_TYPE_ID" type="Int32" label="^DocTypId^DOC TYPE ID^DocTypId^" />
    <field name="Approve_Ask" type="Int32" label="^AppAsk^Approve Ask^AppAsk^">
      <items style="RadioButtonList" dataController="YesNo" dataView="grid1" dataTextField="Descriptions" dataValueField="ReturnValueInt" />
    </field>
    <field name="Rec_Status" type="Int32" label="^RecSta^Rec Status^RecSta^">
      <items style="RadioButtonList" dataController="Rec_Status" dataView="grid1" dataTextField="Descriptions" dataValueField="ReturnValueInt" />
    </field>
    <field name="App_Group_ID" type="Int64" label="^AppGroId^App Group ID^AppGroId^" contextFields="DOC_TYPE_ID=DOC_TYPE_ID">
      <items style="DropDownList" dataController="Pick_Approval_Hirarchy" dataView="grid1" dataTextField="ApprovalGroupName" dataValueField="App_Group_ID" />
    </field>
  </fields>

  <businessRules>
    <rule id="r100" commandName="New" type="Sql" phase="Execute"><![CDATA[SET @DR_Type='Sales'
SET @DR_Date=GETDATE()
SELECT @DR_No=IsNull(MAX(DR_No)+1,1) FROM DR_Header WHERE DR_Type=@DR_Type AND IsNull(StoreID,0)=0

SET @DOC_TYPE_ID=23]]></rule>
    <rule id="r101" commandName="Insert" type="Sql" phase="Before"><![CDATA[SET @OPU_Code=@Session_OPU_Code
SET @Company_Code=@Session_Company_Code]]></rule>
    <rule id="r102" commandName="Insert|Update|Delete" type="Sql" phase="Before"><![CDATA[if IsNull(@Session_IsReadOnly,0)=1
begin
    SET @BusinessRules_PreventDefault = 1
   -- SET @Result_ShowViewMessage='Sorry!, You Are ReadOnly User ....You Cannot Change Record'
	SET @Result_Focus = 'DR_ID,You Are ReadOnly User ....You Cannot Change Record'
end

if [dbo].[Check_Open_Date_SubLedger](@DR_Date,@BusinessRules_UserId,3)=1
begin
    SET @BusinessRules_PreventDefault = 1
    SET @Result_ShowViewMessage='Sorry!, The Transaction Date Is Not In An Open Period'
end

if [dbo].[CHECK_APPROVAL_STATUS](@DR_ID,@DOC_TYPE_ID)=1
begin
    SET @BusinessRules_PreventDefault = 1
    SET @Result_ShowViewMessage='Sorry!, The Docuement Is InProcess/Approved, Can not be Update'
end]]></rule>
    <rule id="r103" commandName="Update|Delete" type="Sql" phase="Before"><![CDATA[if IsNull(@Session_IsWriteOnly,0)=1
begin
    SET @BusinessRules_PreventDefault = 1
    SET @Result_ShowViewMessage='Sorry!, You Are WriteOnly User ....You Cannot Change Record'
end]]></rule>

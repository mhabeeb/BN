    </actionGroup>
  </actions>
  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[SET @OPU_Code=@Session_OPU_Code
SET @Company_Code=@Session_Company_Code
SET @ProjectType='1']]></rule>
  </businessRules>
</dataController>
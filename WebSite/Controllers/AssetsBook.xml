  </actions>
  <businessRules>
    <rule id="r100" commandName="Insert" type="Sql" phase="Before"><![CDATA[SET @Created_By=@BusinessRules_UserId
SET @Created_DateTime=GETDATE()
SET @OPU_Code=@Session_OPU_Code
SET @Company_Code=@Session_Company_Code
SET @InActive = 0
]]></rule>

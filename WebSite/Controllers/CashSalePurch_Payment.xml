    SET @Result_ShowViewMessage='Sorry!, You Are WriteOnly User ....You Cannot Change Record'
end]]></rule>
    <rule id="r104" commandName="Insert|Update|Delete" type="Sql" phase="After"><![CDATA[EXEC XX_UPDATE_INV_HEADER @Transaction_ID]]></rule>

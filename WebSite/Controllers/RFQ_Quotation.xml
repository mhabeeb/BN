      <action commandName="SQL" headerText="Convert to PO" id="a100" whenLastCommandName="Select" whenClientScript="[ClosedYN]==0">
        <data><![CDATA[
IF NOT EXISTS
(
    SELECT TOP 1 RFQ_NO
    FROM [dbo].[RFQ_Header]
    WHERE RFQ_NO = @RFQ_NO
          AND Rec_Status = 1
)
    BEGIN
        SET @BusinessRules_PreventDefault = 1
        SET @Result_ShowViewMessage = 'Un Approved RFQ Cannot Convert to PO.. '
    END


UPDATE RFQ_Quotation
  SET
      [ConvertToPO] = 1,
ClosedYN=1
WHERE [RFQ_NO] = @RFQ_NO
      AND [Sys_Number] = @Sys_Number
      AND PR_Line_No = @PR_Line_No;]]></data>
      </action>
    </actionGroup>

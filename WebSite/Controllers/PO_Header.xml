    <actionGroup id="ag102" scope="ActionBar" headerText="Cancel PO" flat="true">
      <action commandName="SQL" headerText="Cancel PO" id="a100">
        <data><![CDATA[DECLARE @s_Error INT

SET @s_Error = 0

IF EXISTS ( SELECT TOP 1
                       PO_NO
                       FROM tbl_Transactions_Line
                       WHERE PO_NO= @PO_NO
                                           )
    BEGIN
        SET @s_Error = 1
    END

IF @s_Error = 0
    BEGIN
        EXEC dbo.Cancel_PO
             @PO_NO
    END]]></data>
      </action>
    </actionGroup>
